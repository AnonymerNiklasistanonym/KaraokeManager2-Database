<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Example App</title>
    <link rel="stylesheet" href="/material-icons/css/material-icons.min.css">
    <link rel="stylesheet" href="/material-icons/iconfont/material-icons.css">
    <link href="/materialize/css/materialize.min.css" type="text/css" rel="stylesheet" media="screen,projection" />
</head>

<body>

    {{{body}}}

    {{> partial}}

    {{#each array}}
    <p>=> "{{this}}"</p>
    <p>@index: {{@index}}</p>
    {{#if @first}}
    <p>@first: First!</p>
    {{/if}}
    {{#if @last}}
    <p>@last: Last!</p>
    {{/if}}
    <p>@key: {{@key}}</p>
    <p>@root: {{@root.foo}}</p>
    {{/each}}

</body>

</html>
