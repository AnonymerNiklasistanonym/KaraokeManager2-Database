<div class="container">
    <div class="row valign-wrapper">
        <div class="col s10 m10 l10 offset-s1 offset-m1 offset-l1 valign">
            <div class="card red darken-1">
                <div class="card-content white-text">
                    <span class="card-title">{{message}}</span>
                    <h2>{{error.status}}</h2>
                    {{#if displayError}}
                    <ul class="collapsible">
                        <li>
                            <div class="collapsible-header white black-text">
                                <i class="material-icons">code</i>Error stack
                            </div>
                            <div class="collapsible-body white black-text">
                                <span>
                                    <pre style="overflow-x:scroll">{{error.stack}}</pre>
                                </span>
                            </div>
                        </li>
                        <li>
                            <div class="collapsible-header white black-text">
                                <i class="material-icons">list</i>Request body
                            </div>
                            <div class="collapsible-body white black-text">
                                <span>
                                    <pre style="overflow-x:scroll">{{error.body}}</pre>
                                </span>
                            </div>
                        </li>
                    </ul>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
