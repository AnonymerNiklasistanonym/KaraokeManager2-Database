{
  "name": "karaokemanager2-database",
  "version": "0.0.1",
  "description": "Database test module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "build": "node_modules/.bin/pkg .",
    "documentation": "node ./classes/documentation/documentation.js",
    "format": "node_modules/.bin/standard --fix ./index.js ./classes/**/*.js ./routes/**/*.js",
    "test": "node_modules/.bin/jshint -c ./.jshintrc --verbose ./index.js ./classes/ ./routes/",
    "z-fix-later-jsdoc": "node_modules/.bin/jsdoc -c .jsdoc.json -R README.md --verbose index.js && echo Documentation can be found in .\\docs\\index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnonymerNiklasistanonym/KaraokeManager2-Database.git"
  },
  "author": "AnonymerNiklasistanonym",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AnonymerNiklasistanonym/KaraokeManager2-Database/issues"
  },
  "homepage": "https://github.com/AnonymerNiklasistanonym/KaraokeManager2-Database#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "btoa": "^1.2.1",
    "compression": "^1.7.3",
    "documentation": "^8.1.2",
    "express": "^4.16.3",
    "express-handlebars": "^3.0.0",
    "express-minify-html": "^0.12.0",
    "express-session": "^1.15.6",
    "helmet": "^3.13.0",
    "jsmediatags": "^3.8.1",
    "morgan": "^1.9.1",
    "rotating-file-stream": "^1.3.8",
    "socket.io": "^2.1.1",
    "sqlite3": "^4.0.2",
    "wavesurfer.js": "^2.0.6"
  },
  "devDependencies": {
    "@pixi/jsdoc-template": "^2.4.2",
    "jsdoc": "^3.5.5",
    "jshint": "^2.9.6",
    "standard": "^12.0.1",
    "pkg": "^4.3.4"
  },
  "bin": {
    "pkg": "index.js"
  },
  "pkg": {
    "scripts": [
      "classes/database/**/*.js",
      "classes/api/**/*.js",
      "routes/**/*.js"
    ],
    "assets": [
      "views/**/*.handlebars",
      "data/**/*.json",
      "https/ssl/*.crt",
      "https/ssl/*.key",
      "https/dh/*.pem"
    ],
    "targets": [
      "latest-linux-x64",
      "latest-win-x64",
      "latest-macos-x64"
    ]
  },
  "standard": {
    "ignore": [
      "public/scripts/**/*.js"
    ]
  },
  "engines": {
    "node": "^10.11.0"
  }
}
